}


Header{
font-family: 'CSB';
font-weight:normal;
font-style:normal;
font-stretch:ultra-expanded;
}


.navbar {
  overflow: hidden;
  background-color:#839FC6;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.navbar button {
  float: left;
  display: block;
  color: #839FC6;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  width: 20%;
}

.navbar button:hover {
  background: #8399C6;
  color: black;
}

.navbar button.active {
  background-color: #4CAF50;
  color: white;
}