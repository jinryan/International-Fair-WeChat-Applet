section {
  height: 100vh;
  width: 100vw;
  scroll-snap-align: start;
}



.hero-text {
  color: white;
  font-size: 30px;
}

.hero-image {
  height: 100vh;
  width: 100vw;
  background-position: center;
  background-repeat: no-repeat;
  background-size: cover;
}

.header_alt{
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
  height: 80px;
  position: fixed;
  z-index: 5;
  box-shadow: 0px 0px 5px #808080;
}

.text-block {
  position: relative;
  top: 50%;
  transform: translate(-50%, -50%);
  height: 20vh;
  width: 50px;
}

.filler{
  display: block;
  background-color: #f1f1f1;
  width: 100%;
  height: 90px; 
}

.scheduleTime{
  width:180rpx;
  position:absolute;
  margin-top: -42px;
  right: 60rpx;
  z-index: 2;
}

.scheduleInfo{
  background-color: white;
  width:100%;
  height:250rpx;
  position:absolute;
  border-bottom: 1px #d3d3d3;
}

.filler2{
  display: block;
  background-color: #f1f1f1;
  width: 100%;
  height: 30px;
}

.filler3{
  display: block;
  background-color: #f1f1f1;
  width: 100%;
  height: 220rpx;
}


.locationIcon{
  width:20px;
  height:20px;
  position:absolute;
  top:64rpx;
  right:40rpx;
}

.circle {
  left: -35rpx;
  top: 90px;
  width: 24.8rpx;
  height: 24.8rpx;
  border-radius: 12.4rpx;
  z-index: 1;
  position: relative;
  background-color: red;
  opacity: 0.6;
}

.typeOverlay{
  position:absolute;
  z-index: 1;
  opacity: 0.3;
  left: 500rpx;
  margin-top: 10px;
}

.barron{
  width: 100%;
  height: 1000rpx;
}