/* miniprogram/pages/bottom_nav4/bottom_nav4.wxss */
.navbar {
  overflow: hidden;
  background-color: #839FC6;
  position: fixed;
  bottom: 0;
  width: 100%;
}

.navbar button {
  float: left;
  display: block;
  color: #839FC6;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
  width: 20%;
}

.navbar button:hover {
  background: #8399C6;
  color: black;
}

.button {
  background-color: none;
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 80rpx;
  z-index: 10;
}

.navbar button.active {
  background-color: #4CAF50;
  color: white;
}

.map-canvas {
  width: 700rpx;
  height: 800rpx;
}

.nav_icon{
  width: 40px;
  height: 40px;
}

