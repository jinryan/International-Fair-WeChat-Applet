.popup{
  width: 600rpx;
  height: 400rpx;
  z-index: 5;
  position: absolute;
  background-color: white;
  box-shadow: 0px 0px 5px #d3d3d3;
  left: 75rpx;
}

.popup_content{
  width: 550rpx;
  height: 350rpx;
  position: fixed;
  margin-top: 25rpx;
  margin-left: 14rpx;
}

.header_alt{
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
  height: 80px;
  position: fixed;
  z-index: 5;
  box-shadow: 0px 0px 5px #808080;
}

.size {
  width: 250rpx;
  height: 250rpx;
}

.filler{
  display: block;
  background-color: #f1f1f1;
  width: 100%;
  height: 80px;
}


.map_view{
  width: 600px;
  height: 600px;
}