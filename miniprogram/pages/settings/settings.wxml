<view class="profile_view">
<image class="profile_pic" src="{{avatarUrl}}"/>
</view>
<view class="user_text"> <view style = "width: 100%; font-size: 40rpx; text-align: center; font-family:CO;">
  <view style="height:12px"/>
  User: {{userInfo.nickName}}
  </view>
</view>

<button class="button" bindtap="toLanguage">

<view class="button_text">Language</view>
<image src="/images/language.png" class="settings_icon"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>

</button>

