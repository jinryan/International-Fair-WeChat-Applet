<button class="button" bindtap="toQRcode">
<view class="button_text">View QR Code</view>
<image src="/images/QR.png" class="settings_icon"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<button class="button2" bindtap="boothLogin">
<view class="button_text">Login to Booth</view>
<image src="/images/booth.png" class="settings_icon"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<picker class="button2" bindchange="changeMax" value="0" range="{{ticket_choices}}">
<view class="button_text2">Maximum Transaction Amount</view>
<image src="/images/trans.png" class="settings_icon"></image>
</picker>


<button class="button" bindtap="toSponsors"><view class="button_text">Sponsors</view>

<image src="/images/sponsor.png" class="settings_icon" style = "opacity: 0.7"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<button class="button2" bindtap="toCredits">
<view class="button_text">Credits</view>
<image src="/images/credits.png" class="settings_icon"/>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<button class="button2" bindtap="toFeedback">
<view class="button_text">Feedback</view>
<image src="/images/feedback.png" class="settings_icon"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<button class="button" bindtap="toTutorial">
<view class="button_text">View Tutorial</view>
<image src="/images/tutorial.png" class="settings_icon2"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>


<button class="button" bindtap="toHistory">
<view class="button_text" style="margin-top: 7rpx">Transaction History</view>
<image src="/images/history.png" class="settings_icon3"></image>
<image src="/images/right_arrow.png" class="right_arrow"></image>
</button>

<view style="height:50px"></view>

