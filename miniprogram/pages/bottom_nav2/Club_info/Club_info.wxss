/* miniprogram/pages/bottom_nav2/Club_info/Club_info.wxss */
.table {
  border: 0px solid darkgray;
}
.header_alt{
  display: inline-block;
  margin-left: auto;
  margin-right: auto;
  width: 100%;
  height: 80px;
  position: relative;
  z-index: 10;
  box-shadow: 0px 0px 5px #808080;
}

.right_arrow{
  position: relative;
  width:40rpx;
  height: 40rpx;
  margin-top: 10px;
  opacity: 0.6;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
  font-size: 15px;
}
.td {
    width:40%;
    justify-content: center;
    text-align: center;
}
.th {
  width: 40%;
  justify-content: center;
  display: flex;
  height: 3rem;
  align-items: center;
}
.center {
  display: block;
  margin-left: auto;
  margin-right: auto;
  width: 50%;
}

.whiteContainer {
  position: relative; display:inline-block; z-index:3; background: white;   width: 100%; color: #392323; box-shadow: 0px 0px 5px #d3d3d3;
  margin-left: auto;
  margin-right: auto;
  margin-top: 8px;
}

/* top: 200rpx; */

.titleText{
  position:absolute; left:20rpx; top:15%; font-size:25px; z-index: 5
}

.bodyText{
  position:absolute; left:20rpx; top:50%;  font-size:20px; z-index: 5;
}