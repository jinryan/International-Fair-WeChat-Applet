<!--miniprogram/pages/master_nav/master_nav.wxml-->
<view style="background-color: white ;position: fixed; bottom: 0px;width: 100%; height: {{nav_height}}px;z-index:5; box-shadow: 0px 0px 5px #d3d3d3;">
  <button 
      bindtap="bottom_nav3" 
      plain="true"
style="border: none; border-top: 2px solid #{{three}}; float: left;width: 20%; background-color:none; border-radius:0px;z-index:1;">

    <image
    class = "nav_icon"
    src = "/images/home.png"
        style="  width: 25px;height: 25px; top: 5px;">
    </image>
  </button>
  
  <button 
      bindtap="bottom_nav1" 
      plain="true"
      style="border: none; border-top: 2px solid #{{one}}; float: left;width: 20%; background-color:none; border-radius:0px;z-index:1;">
    <image
    class = "nav_icon"
    src = "/images/map.png"
    style="width: 25px;height: 25px; top: 5px;">
    </image>
  </button>

  <button 
      bindtap="bottom_nav2" 
      open-type="getUserInfo" 
      lang="en" 
     bindgetuserinfo="onGotUserInfo"
      plain="true"
style="border: none; border-top: 2px solid #{{two}}; float: left;width: 20%; background-color:none; border-radius:0px;z-index:1;">
    <image
    class = "nav_icon"
    src = "/images/ticket.png"
        style="  width: 25px;height: 25px; top: 5px;">

    </image>

  </button>

  <button 
      bindtap="bottom_nav4" 
      plain="true"
style="border: none; border-top: 2px solid #{{four}}; float: left;width: 20%; background-color:none; border-radius:0px;z-index:1;">

    <image
    class = "nav_icon"
    src = "/images/schedule.png"
        style="  width: 25px;height: 25px; top: 5px;">

    </image>

  </button>

  <button 
      bindtap="bottom_nav5" 
      plain="true"
style="border: none; border-top: 2px solid #{{five}}; float: left;width: 20%; background-color:none; border-radius:0px;z-index:1;">

    <image
    class = "nav_icon"
    src = "/images/food.png"
        style="  width: 25px;height: 25px; top: 5px;z-index:1;">

    </image>
    
  </button>
</view>